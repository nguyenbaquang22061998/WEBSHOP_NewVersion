@model IEnumerable<DOLPHIN.Model.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:20px">Quản lý Bài viết</h2>
<span class="badge bg-primary" style="font-size:20px ; margin-left:20px"><a href="/Admin/News/Create">Thêm bài viết mới</a></span>
<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">
                        Tiếu đề
                    </th>
                    <th class="text-center">
                        Ảnh
                    </th>
                    <th class="text-center">
                        Mô tả
                    </th>
                    <th class="text-center">
                        Nguồn dẫn
                    </th>
                    <th class="text-center">
                        Ngày cập nhật
                    </th>
                    <th class="text-center">
                        Cập nhật bởi
                    </th>
                    <th class="text-center">
                        Ngày xuất bản
                    </th>
                    <th class="text-center">
                        Tạo bởi
                    </th>
                    <th class="text-center">
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Titile)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Images)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Refer)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.UpdatedBy.Email)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.CreatedBy.Email)
                        </td>
                        <td class="text-center">
                            <span class="badge bg-warning"><a href="/Admin/News/Edit/@item.Id">Sửa</a></span>
                            <span class="badge bg-success"><a href="/Admin/News/Details/@item.Id">Chi tiết</a></span>
                            <span class="badge bg-danger"><a href="/Admin/News/Delete/@item.Id">Xóa</a></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
